/* 档位卡片样式 */

.package-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #E5E7EB;
  position: relative;
  transition: all 0.3s ease;
}

.package-card.highlight {
  border-color: #B49B67;
  box-shadow: 0 8rpx 32rpx rgba(180, 155, 103, 0.2);
}

/* 推荐徽章 */
.recommend-badge {
  position: absolute;
  top: -16rpx;
  right: 32rpx;
  background: linear-gradient(135deg, #B49B67 0%, #D4AF37 100%);
  padding: 8rpx 24rpx;
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(180, 155, 103, 0.3);
}

.badge-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 卡片内容 */
.card-content {
  display: flex;
  flex-direction: column;
}

/* 头部 */
.card-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.card-price {
  font-size: 56rpx;
  font-weight: 700;
  color: #B49B67;
}

/* 描述 */
.card-desc {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 功能列表 */
.feature-list {
  margin-bottom: 48rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(16, 185, 129, 0.1);
  color: #10B981;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.feature-text {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
}

/* 选择按钮 */
.select-btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 9999rpx;
  background-color: #F3F4F6;
  color: #1F2937;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.select-btn::after {
  border: none;
}

.select-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.select-btn.btn-highlight {
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(31, 41, 55, 0.3);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}