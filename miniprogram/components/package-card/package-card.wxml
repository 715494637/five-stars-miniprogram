<!-- 档位卡片组件 -->
<view class="package-card {{highlight ? 'highlight' : ''}}" bindtap="handleCardTap">
  <!-- 推荐徽章 -->
  <view class="recommend-badge" wx:if="{{highlight}}">
    <text class="badge-text">最为推荐</text>
  </view>

  <!-- 卡片内容 -->
  <view class="card-content">
    <!-- 标题和价格 -->
    <view class="card-header">
      <text class="card-title">{{title}}</text>
      <text class="card-price">{{price}}</text>
    </view>

    <!-- 描述 -->
    <text class="card-desc">{{desc}}</text>

    <!-- 功能列表 -->
    <view class="feature-list">
      <view class="feature-item" wx:for="{{features}}" wx:key="index">
        <text class="feature-icon">✓</text>
        <text class="feature-text">{{item}}</text>
      </view>
    </view>

    <!-- 选择按钮 -->
    <button class="select-btn {{highlight ? 'btn-highlight' : ''}}" catchtap="handleSelect">
      <text class="btn-text">选择此方案</text>
    </button>
  </view>
</view>