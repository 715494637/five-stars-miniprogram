/* 自定义优雅底部导航样式 */

.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(180, 155, 103, 0.2);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 导航容器 */
.tabbar-container {
  display: flex;
  align-items: center;
  height: 100rpx;
  position: relative;
}

/* 导航项 */
.tab-item {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #9CA3AF;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

/* 选中状态 */
.tab-item.active .tab-text {
  color: #1F2937;
  font-weight: 600;
  font-size: 30rpx;
  letter-spacing: 1rpx;
}

.tab-item:active {
  transform: scale(0.95);
}

/* 底部安全区域 */
.safe-area {
  height: env(safe-area-inset-bottom);
  min-height: 0;
}