/* 孵化档位页面样式 */

.page {
  min-height: 100vh;
  background-color: #FDFBF7;
  display: flex;
  flex-direction: column;
}

/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(180, 155, 103, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding-top: env(safe-area-inset-top);
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  letter-spacing: 2rpx;
}

/* 页面内容容器 */
.page-content {
  flex: 1;
  height: calc(100vh - 88rpx - 100rpx);
  padding-top: 88rpx;
  padding-bottom: 100rpx;
}

/* 页面头部 */
.page-header {
  padding: 64rpx 32rpx 32rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
}

/* Tab 切换 */
.tab-scroll {
  white-space: nowrap;
  padding: 0 32rpx 32rpx;
}

.tab-container {
  display: inline-flex;
  gap: 16rpx;
}

.tab-item {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  border-radius: 9999rpx;
  background-color: #F3F4F6;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: rgba(180, 155, 103, 0.1);
  border: 2rpx solid #B49B67;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #6B7280;
}

.tab-item.active .tab-text {
  color: #B49B67;
  font-weight: 600;
}

/* 档位卡片列表 */
.card-list {
  padding: 0 32rpx;
}

/* 底部说明 */
.footer-note {
  padding: 32rpx;
  text-align: center;
}

.note-text {
  font-size: 24rpx;
  color: #9CA3AF;
}