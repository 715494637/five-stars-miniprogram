/* 商业变现页面样式 */

.page {
  min-height: 100vh;
  background-color: #FDFBF7;
  display: flex;
  flex-direction: column;
}

/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(180, 155, 103, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding-top: env(safe-area-inset-top);
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  letter-spacing: 2rpx;
}

/* 页面内容容器 */
.page-content {
  flex: 1;
  height: calc(100vh - 88rpx - 100rpx);
  padding-top: 88rpx;
  padding-bottom: 100rpx;
}

/* 页面头部 */
.page-header {
  padding: 64rpx 32rpx 32rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
}

/* 通用 Section */
.section {
  padding: 48rpx 32rpx;
}

.section-gray {
  background-color: #F3F4F6;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title-bar {
  width: 8rpx;
  height: 64rpx;
  background-color: #F59E0B;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.section-title-bar.green {
  background-color: #10B981;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
}

/* 图表容器 */
.chart-container {
  background-color: #1F2937;
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
}

/* 环形图 */
.donut-chart {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.donut-center {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: conic-gradient(
    #F59E0B 0deg 126deg,
    #A855F7 126deg 216deg,
    #3B82F6 216deg 324deg,
    #10B981 324deg 352.8deg,
    #6B7280 352.8deg 360deg
  );
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  position: relative;
}

.donut-center::before {
  content: '';
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #1F2937;
}

.donut-value {
  position: relative;
  z-index: 1;
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.donut-label {
  position: relative;
  z-index: 1;
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

.donut-legend {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.legend-color {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.legend-text {
  font-size: 28rpx;
  color: #FFFFFF;
}

/* 信息卡片 */
.info-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-card {
  background-color: #1F2937;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #F59E0B;
  margin-bottom: 8rpx;
}

.info-desc {
  display: block;
  font-size: 24rpx;
  color: #9CA3AF;
  line-height: 1.5;
}

/* 成长图表 */
.growth-chart {
  background-color: #1F2937;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
}

.growth-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
  gap: 16rpx;
}

.growth-bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.bar-container {
  width: 48rpx;
  height: 240rpx;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.bar-fill {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #10B981 0%, #059669 100%);
  border-radius: 8rpx;
  transition: height 0.3s ease;
}

.bar-label {
  font-size: 20rpx;
  color: #9CA3AF;
  text-align: center;
  white-space: nowrap;
}

.bar-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #10B981;
}

/* 成长描述 */
.growth-desc {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
}

.highlight {
  color: #10B981;
  font-weight: 600;
}

/* 底部说明 */
.footer-note {
  padding: 32rpx;
  text-align: center;
}

.note-text {
  font-size: 24rpx;
  color: #9CA3AF;
}