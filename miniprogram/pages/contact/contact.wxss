/* 联系我们页面样式 */

.page {
  min-height: 100vh;
  background-color: #FDFBF7;
  display: flex;
  flex-direction: column;
}

/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(180, 155, 103, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding-top: env(safe-area-inset-top);
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  letter-spacing: 2rpx;
}

/* 页面内容容器 */
.page-content {
  flex: 1;
  height: calc(100vh - 88rpx - 100rpx);
  padding-top: 88rpx;
  padding-bottom: 100rpx;
}

/* 页面头部 */
.page-header {
  padding: 64rpx 32rpx 48rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 信息卡片区域 */
.info-section {
  padding: 0 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 24rpx;
  color: #9CA3AF;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
}

.card-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #6B7280;
}

/* 按钮区域 */
.action-section {
  padding: 0 32rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  border-radius: 24rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-btn.primary {
  background: linear-gradient(135deg, #B49B67 0%, #D4AF37 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(180, 155, 103, 0.3);
}

.action-btn.secondary {
  background-color: #FFFFFF;
  color: #1F2937;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

.btn-subtitle {
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 4rpx;
}

/* 底部版权 */
.footer {
  padding: 48rpx 32rpx;
  text-align: center;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 8rpx;
}