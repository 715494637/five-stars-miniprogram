/* 首页样式 */

.page {
  min-height: 100vh;
  background-color: #FDFBF7;
  display: flex;
  flex-direction: column;
}

/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(180, 155, 103, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding-top: env(safe-area-inset-top);
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  letter-spacing: 2rpx;
}

/* 页面内容容器 */
.page-content {
  flex: 1;
  height: calc(100vh - 88rpx - 100rpx);
  padding-top: 88rpx;
  padding-bottom: 100rpx;
}

/* Hero Section */
.hero-section {
  padding: 64rpx 32rpx 48rpx;
  background: linear-gradient(135deg, #FFF9E6 0%, #FDFBF7 100%);
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(180, 155, 103, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.hero-section::after {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(0, 0, 0, 0.03) 0%, transparent 70%);
  border-radius: 50%;
}

.hero-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.hero-desc {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  margin-top: 24rpx;
  max-width: 600rpx;
}

/* 数据统计 */
.stats-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-top: 48rpx;
  padding: 32rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
}

.stat-unit {
  font-size: 24rpx;
  font-weight: 400;
  color: #9CA3AF;
  margin-left: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #9CA3AF;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-top: 8rpx;
}

.stat-divider {
  width: 2rpx;
  height: 64rpx;
  background-color: #E5E7EB;
}

/* 通用 Section */
.section {
  padding: 64rpx 32rpx;
}

.section-gray {
  background-color: #F3F4F6;
}

.section-header {
  margin-bottom: 48rpx;
}

.section-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.section-desc {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
}

/* 公司实力 */
.location-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

.location-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.location-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.location-type {
  display: block;
  font-size: 24rpx;
  color: #9CA3AF;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
}

.location-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.location-desc {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.5;
}

.location-location {
  display: block;
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(180, 155, 103, 0.15);
}

/* 全案服务 */
.service-list {
  margin-bottom: 48rpx;
}

.service-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.service-number {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #1F2937;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  margin-top: 4rpx;
}

.service-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.5;
}

.team-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.team-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.team-card:active {
  border-color: #B49B67;
  transform: scale(0.98);
}

.team-icon {
  display: block;
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.team-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.team-desc {
  display: block;
  font-size: 24rpx;
  color: #6B7280;
}

/* 底部咨询按钮 */
.footer-cta {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #FFFFFF;
  border-top: 1rpx solid #E5E7EB;
  z-index: 100;
}

.cta-btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(31, 41, 55, 0.3);
  transition: all 0.2s ease;
}

.cta-btn::after {
  border: none;
}

.cta-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.cta-text {
  font-size: 28rpx;
  font-weight: 600;
}

.text-gold {
  color: #B49B67;
}