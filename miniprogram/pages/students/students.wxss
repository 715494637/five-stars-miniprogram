/* 学员页面样式（占位） */

.page {
  min-height: 100vh;
  background-color: #FDFBF7;
  display: flex;
  flex-direction: column;
}

/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(180, 155, 103, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding-top: env(safe-area-inset-top);
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  letter-spacing: 2rpx;
}

/* 页面内容容器 */
.page-content {
  flex: 1;
  height: calc(100vh - 88rpx - 100rpx);
  padding-top: 88rpx;
  padding-bottom: 100rpx;
}

.placeholder-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  text-align: center;
  height: 100%;
}

.placeholder-icon {
  font-size: 160rpx;
  margin-bottom: 48rpx;
  opacity: 0.3;
}

.placeholder-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 24rpx;
}

.placeholder-desc {
  font-size: 32rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
}

.placeholder-subtitle {
  font-size: 28rpx;
  color: #9CA3AF;
  max-width: 500rpx;
  line-height: 1.6;
}

.placeholder-decoration {
  display: flex;
  gap: 16rpx;
  margin-top: 64rpx;
}

.decoration-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #B49B67;
  opacity: 0.3;
  animation: pulse 1.5s ease-in-out infinite;
}

.decoration-dot:nth-child(2) {
  animation-delay: 0.3s;
}

.decoration-dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
}